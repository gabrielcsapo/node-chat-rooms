{
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 1
    },
    "globals": {
      "define": true
    },
    "env": {
        "node": true,
        "browser": true,
        "mocha": true
    }
}
